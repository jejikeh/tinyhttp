<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TinyHttp.Application.ViewModels;assembly=TinyHttp.Application"
             x:DataType="viewModels:MainViewModel"
             x:Class="TinyHttp.Gui.MainPage">

    <ScrollView>
        
        <StackLayout Padding="64" Spacing="16">
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="1" Text="Send"/>
                    </Grid>
                <Entry Grid.Column="0" Placeholder="google.com"/>
            </Grid>
        </StackLayout>
        
    </ScrollView>

</ContentPage>
